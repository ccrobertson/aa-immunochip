cp ../AA_icaa_hg19_noIBD.bed run_imputation/AA_icaa_hg19_noIBD_updated+t1dgc+famids.bed
cp ../AA_icaa_hg19_noIBD.bim run_imputation/AA_icaa_hg19_noIBD_updated+t1dgc+famids.bim
